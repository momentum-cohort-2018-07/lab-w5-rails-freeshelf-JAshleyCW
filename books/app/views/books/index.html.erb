<div class="container">
    <h1>Book Catalog</h1>

    <%= link_to 'Home', welcome_index_path %> |
    <%= link_to 'New book', new_book_path %>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>URL</th>
    </tr>

    <% @books.each do |book| %> 
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td> 
            <td><%= book.genre %></td> 
            <td><%= book.url %></td>
            <td><%= link_to 'Show', book_path(book) %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Delete', book_path(book),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>
</div>

